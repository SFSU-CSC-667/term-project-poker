<!-- Home Page -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="expires" content="0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/cards.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <% include includes/header.ejs %>
    <div class="scoreboard-section">
      <h2 class="scoreboard-header">Score Board</h2>
      <div class="scoreboard">
        <p> Scoreboard Data </p>
      </div>
    </div>
    <div class="right-section">
      <div class="block-item">
        <a href="/lobby"><button id="view-games-btn" class="btn btn-primary">View Games</button></a>
      </div>
      <br />
      <div class="chat-section block-item">
        <div id="chat-data"></div>
        <div>
          <div class="input-group">
            <input id="chat-msg" type="text" class="form-control" placeholder="Message">
            <span class="input-group-btn">
              <button id="chat-send" class="btn btn-secondary" type="button">Send</button>
            </span>
          </div>
        </div>
      </div>
    </div>
    <% include includes/footer.ejs %>
  </body>
</html>
