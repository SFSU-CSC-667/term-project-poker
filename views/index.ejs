<!-- Home Page -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="expires" content="0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/cards.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
  </head>
  <body>
    <% include includes/header.ejs %>
    <div class="scoreboard-section">
      <h2 class="scoreboard-header">Score Board</h2>
      <ul class="scoreboard">
        <li> Scoreboard Data</li>
      </ul>
    </div>
    <div class="right-section">
      <div class="block-item">
        <a href="/lobby"><button id="view-games-btn" class="btn btn-primary">View Games</button></a>
      </div>
      <br />
      <div class="chat-section block-item">
        <ul id="message-list"></ul>
        <form id="form" action="" onsubmit="return submitfunction();" >
          <input type="hidden" id="user" value="" />
          <input id="message" autocomplete="off" placeholder="Type yor message here.." />
          <input type="submit" id="button" value="Send"/>
        </form>
      </div>
    </div>
    <% include includes/footer.ejs %>
  </body>
</html>