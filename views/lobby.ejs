<!-- Lobby Page -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="expires" content="0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/reset.css' />
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/cards.css'/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
  <% include includes/header.ejs %>
  <div class="scoreboard-section">
    <h2 class="scoreboard-header">Score Board</h2>
    <ul class="scoreboard">
      <li>Scoreboard Data</li>
    </ul>
  </div>
  <div class="right-section">
    <form id="create-game">
      <input id="game-name" placeholder="Name Your Game!" required/>
      <button class='btn btn-primary'>Create Game</button>
      <br/><br/>
    </form>
  </div>
  <div class="right-section">
    <h2>Poker Game List</h2>
    <div class="gamelist"></div>
    <button id="refresh-gamelist" class="btn btn-default" type="button">Refresh</button>
  </div>
  <div class="chat-section">
    <ul id="messages"></ul>
    <span id="notifyUser"></span>
    <form id="form" action="" onsubmit="return submitfunction();" >
      <input type="hidden" id="user" value="" />
      <input id="m" autocomplete="off" onkeyup="notifyTyping();" placeholder="Type yor message here.." />
      <input type="submit" id="button" value="Send"/>
    </form>
  </div>
  <% include includes/footer.ejs %>
  <script src="/javascripts/gamelist.js"></script>
  <script src="/javascripts/lobby.js"></script>
  </body>
</html>
