<!-- Lobby Page -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="expires" content="0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/cards.css'/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
<% include includes/header.ejs %>
<div class="scoreboard-section">
    <h2 class="scoreboard-header">Score Board</h2>
    <ul class="scoreboard">
        <li>Scoreboard Data</li>
    </ul>
</div>
<div class="right-section">
    <form id="create-game">
        <input id="game-name" placeholder="Name Your Game!" required/>
        <button class='btn btn-primary'>Create Game</button>
        <br/><br/>
    </form>
</div>
<div class="right-section">
    <h2>Poker Game List</h2>
    <ul class="gamelist"></ul>
    <button id="refresh-gamelist" class="btn btn-default" type="button">Refresh</button>
</div>
<div class="chat-section block-item">
    <div id="chat-data"></div>
    <div>
        <div class="input-group">
            <input id="chat-msg" type="text" class="form-control" placeholder="Message">
            <span class="input-group-btn">
            <button id="chat-send" class="btn btn-secondary" type="button">Send</button>
          </span>
        </div>
    </div>
</div>
<% include includes/footer.ejs %>
<script src="/javascripts/gamelist.js"></script>
<script src="/javascripts/lobby.js"></script>
</body>
</html>
