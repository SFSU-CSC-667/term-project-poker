<div class="modal" id="register-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <span class="left glyphicon glyphicon-user"></span>
        <h4 class="modal-title modal-header" id="myModalLabel">Register</h4>
      </div>
      <form id='register-form'>
        <div class="modal-body">
          <label for="email">Email / Username</label>
          <input class='form-control' id='email' type="email" placeholder='ex. example@mail.com' required /> <br>
          <label for="firstname">First Name</label>
          <input class='form-control' id='first-name' type="text" placeholder='ex. John' required /> <br>
          <label for="lastname">Last Name</label>
          <input class='form-control' id='last-name' type="text" placeholder='ex. Smith' required /> <br>
          <label for="password">Password</label>
          <input class='form-control passwords' id='password' type="password" placeholder='Password' required /> <br>
          <label for="password">Confirm Password</label>
          <input class='form-control passwords' id='password-confirm' type="password" placeholder='Confirm Password' required /> <br>
        </div>
        <div class="modal-footer">
          <button type="button" class="left btn btn-danger" data-dismiss="modal">Close</button>
          <button type="button" id="signin-modal-btn" class="left btn btn-primary" data-dismiss="modal">Sign In</button>
          <button type ="submit" id="register-submit" class="right btn btn-success">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

